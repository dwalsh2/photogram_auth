<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<div class="col-md-12">
  <table class="table table-striped table-hover">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show Profile</a>
          <a href="/users/<%= user.id %>/edit" class="btn btn-warning">Edit Profile</a>
          <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
    <% end %>
  </table>
</div>